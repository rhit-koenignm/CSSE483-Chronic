<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chronic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grape</item>
        <item name="colorPrimaryVariant">@color/plum</item>
        <item name="colorOnPrimary">@color/pearl</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorSecondaryVariant">@color/soft_pink</item>
        <item name="colorOnSecondary">@color/pearl</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Chronic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Chronic.Switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="colorControlActivated">@color/plum</item>
        <item name="colorSwitchThumbNormal">@color/soft_pink</item>
        <item name="android:colorForeground">@color/plum</item>
        <item name="colorAccent">@color/plum</item>
    </style>

    <style name="Theme.Chronic.TimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/plum</item>
        <item name="android:numbersSelectorColor">@color/plum</item>
    </style>

    <style name="Theme.Chronic.DayButtons" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/lavender</item>
        <item name="android:textColor">@color/pearl</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">3dp</item>
    </style>

    <style name="Theme.Chronic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Chronic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/plum</item>
        <item name="colorPrimary">@color/lavender</item>
        <item name="android:background">@color/grape</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/grey</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FAB_Theme" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="colorAccent">@color/plum</item>
        <item name="tint">@color/plum</item>
    </style>


</resources>