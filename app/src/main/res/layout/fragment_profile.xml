<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment"
    android:layout_margin="20dp"
    >


    <ImageView
        android:id="@+id/ProfilePhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/ProfilePhoto"
        android:text="Inigo Montoya"
        android:gravity="center_vertical"
        android:textColor="?colorPrimary"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:text="YouKilledMyFather@PrepareToDie.com"
        android:textColor="@color/grey"
        android:layout_below="@id/Name"
        android:layout_toEndOf="@id/ProfilePhoto"
        />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/Email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/trackingTagsButton"
        android:backgroundTint="?colorPrimaryVariant"
        android:src="@drawable/ic_baseline_person_24"
        app:tint="@color/white"
        />

    <ImageButton
        android:id="@+id/trackingTagsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/Email"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="?colorPrimaryVariant"
        android:src="@drawable/ic_baseline_push_pin_24"
        app:tint="@color/white"
        />

    <ImageButton
        android:id="@+id/paindataButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/Email"
        android:layout_toRightOf="@id/trackingTagsButton"
        android:layout_margin="10dp"
        android:backgroundTint="?colorPrimaryVariant"
        android:src="@drawable/ic_baseline_insert_chart_outlined_24"
        app:tint="@color/white"

        />
</RelativeLayout>