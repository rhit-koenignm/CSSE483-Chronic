<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/post_image"
        android:layout_alignBottom="@id/post_image"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/post_image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/post_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post title"
            android:textColor="@color/plum"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_content_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grape"
            android:textSize="15sp"
            android:text="@string/post_content_preview_text" />

        <TextView
            android:id="@+id/post_author_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/plum"
            android:textStyle="bold"
            android:text="@string/post_author_text"
            />
    </LinearLayout>


</RelativeLayout>