<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >


    <TextView
        android:id="@+id/text_day_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Low Pain Level Day"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_pain_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_day_description"
        android:text="3.0"
        android:textColor="@color/grey"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_start_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="1/1/2022"
        android:textColor="@color/plum"
        android:textStyle="bold"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/text_end_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/text_start_timestamp"
        android:text="1/10/2022"
        android:textColor="@color/plum"
        android:textStyle="bold"
        android:textSize="10sp"
        />





</RelativeLayout>