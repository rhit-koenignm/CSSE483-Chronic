<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    >


    <TextView
        android:id="@+id/text_day_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Low Pain Level Day"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_pain_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_day_description"
        android:text="3.0"
        android:textColor="@color/grey"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="9"
        android:textColor="@color/plum"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/text_month_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/text_day_number"
        android:text="APR"
        android:textColor="@color/plum"
        android:textStyle="bold"
        android:textSize="25sp"
        />





</RelativeLayout>